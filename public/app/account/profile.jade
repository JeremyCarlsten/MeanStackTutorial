.container
    .well
        form.form-horizontal(name='profileForm')
            fieldset
                legend User Profile
                    .form-group
                        label.col-md-2.control-label(for='email') Email
                        .col-md-10
                            input.form-control(name='email', type='email', placeholder='Email', ng-model='profileCtrl.email', required)
                    .form-group
                        label.col-md-2.control-label(for='firstName') First Name
                        .col-md-10
                            input.form-control(name='firstName', type='text', placeholder='First Name', ng-model='profileCtrl.firstName', required)
                    .form-group
                        label.col-md-2.control-label(for='lastName') Last Name
                        .col-md-10
                            input.form-control(name='lastName', type='text', placeholder='Last Name', ng-model='profileCtrl.lastName', required)
                    .form-group
                        label.col-md-2.control-label(for='password') password
                        .col-md-10
                            input.form-control(name='password', type='password', placeholder='Password', ng-model='profileCtrl.password')
                    .form-group
                        .col-md-10.col-md-offset-2
                            .pull-right
                                button.btn.btn-primary(ng-click='profileCtrl.update()' ng-disabled="profileForm.$invalid") Update
                                | &nbsp;
                                a.btn.btn-default(href='/') Cancel